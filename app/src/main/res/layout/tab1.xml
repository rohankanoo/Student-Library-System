<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.rohankanoo.homepage.Tab1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/students_blur"
        android:id="@+id/image"/>

    <TableLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/stud_info"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Students \nInformation"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:onClick="studInfo"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/stud_show"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Show Students"
                android:fontFamily="sans-serif"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>