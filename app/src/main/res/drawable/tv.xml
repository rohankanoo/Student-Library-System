<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#CCCCFF"
                android:centerColor="#ffffff"
                android:startColor="#CCCCFF"
                android:type="radial"
                android:gradientRadius="1000"/>

            <stroke
                android:width="1.5dp"
                android:color="#2058FF" />

            <corners
                android:radius="20dp"
                android:bottomRightRadius="10dp"
                android:topRightRadius="10dp"/>

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</selector>